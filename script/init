#!/bin/bash

# 기존 설정 내역있으면 삭제
sudo sed -i '/airuntime/d' /etc/sudoers

# root 계정에서 실행
# airuntime 계정 no passwd
echo -e "airuntime\tALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers
echo ""
echo "========================================================================================================"
echo "no passwd setup completed."
echo "--------------------------------------------------------------------------------------------------------"
cat /etc/sudoers
echo "========================================================================================================"
sleep 5s